<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/common_toolbar"
    android:layout_height="50dp"
    android:background="@color/primary_color"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/common_ic_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ic_menu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_menu"
        android:visibility="gone" />

    <TextView
        android:id="@+id/common_title"
        style="@style/NormalText"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_large" />

    <ImageView
        android:id="@+id/common_ic_send"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@drawable/icon_send" />

    <ImageView
        android:id="@+id/common_ic_new"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:onClick="onCompose"
        android:src="@drawable/ic_note" />

    <ImageView
        android:id="@+id/common_ic_reply"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="65dp"
        android:visibility="gone"
        android:src="@drawable/ic_reply" />

    <ImageView
        android:id="@+id/common_ic_forward"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@drawable/ic_forward" />

    <View
        android:id="@+id/common_ic_send_over"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:background="@color/primary_color_opacity"
        android:clickable="true" />

</RelativeLayout>
